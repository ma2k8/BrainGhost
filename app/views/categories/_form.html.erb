<%= form_for @category, :html => {:class => 'form-horizontal'} do |f| %>

    <% if @category.errors.any? %>
        <div class="alert alert-danger alert-dismissible" role="alert"><%= @category.errors.messages[:category_name][0] %></div>
    <% end %>

    <div class="control-group">
        <%= f.label :category_name, :class => 'control-label' %>
        <div class="controls">
            <%= f.text_field :category_name, :class => ['text_field', 'form-control'], :style => 'width:40%' %>
        </div>
    </div>
    <br/>

    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                categories_path, :class => 'btn btn-default' %>

<% end %>
